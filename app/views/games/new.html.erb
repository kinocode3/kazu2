<p>ここはゲームを登録するページです。</p>
<%= link_to 'トップに戻る', games_path %>
<%= form_for(@game) do |f| %>

  <div class="field">
      <%= f.label :タイトル %><br>
      <%= f.text_field :name %>
  </div>
  <div class="field">
      <%= f.label :遊んだ日 %><br>
      <%=f.text_field :date %>
  </div>
  <div class="field">
      <%= f.label :評価 %><br>
      <%=f.text_field :star %>
  </div>
  <div class="field
      <%= f.label :感想 %><br>
      <%= f.text_area :impression, cols: 40, rows: 20 %>
  </div>

  <div class="actions">
    <%= f.submit'登録' %>
  </div>
<% end %>